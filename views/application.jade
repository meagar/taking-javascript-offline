doctype html
html(manifest=manifestPath)
  head
    title Bosscamp

    link(href="/css/bootstrap.css" rel="stylesheet" type="text/css")
    link(href="/css/app.css" rel="stylesheet" type="text/css")

    script(src="/js/jquery-1.11.0.js")
    script(src="/js/underscore.js")
    script(src="/js/backbone.js")
    script(src="/js/handlebars-v1.3.0.js")
    script(src="/js/moment-with-langs.js")
    script(src="/js/appcache.js")
  body
    .updating(style="display:none")
      h1 Performing Critical Updates!

      .progress
        .progress-bar(role="progressbar" style="width: 0%;")
          .sr-only 60% Complete

    .container
      nav.header
        h1(href="/")
          span Bosscamp
          block header

      .clear

      .left-bar
        block left_bar

      #content.content
        block content

    block templates
